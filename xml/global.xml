<global>
	<target name="m68k-atari-elf">
		<types>
			<type name="void" use="void"/>
			<type name="int8_t" use="char"/>
			<type name="uint8_t" use="unsigned char"/>
			<type name="int16_t" use="short"/>
			<type name="uint16_t" use="unsigned short"/>
			<type name="int32_t" use="int"/>
			<type name="uint32_t" use="unsigned int"/>
		</types>
		<settings>
			<set name="flagOnlyFastVDI" value="True"/>
			<set name="flagTreadSafe" value="False"/>
		</settings>
	</target>

	<target name="m68k-atari-mintelf">
		<types>
			<type name="void" use="void"/>
			<type name="int8_t" use="char"/>
			<type name="uint8_t" use="unsigned char"/>
			<type name="int16_t" use="short"/>
			<type name="uint16_t" use="unsigned short"/>
			<type name="int32_t" use="long"/>
			<type name="uint32_t" use="unsigned long"/>
		</types>
		<settings>
			<set name="flagOnlyFastVDI" value="True"/>
			<set name="flagTreadSafe" value="True"/>
		</settings>
	</target>

	<target name="stdint">
		<types>
			<type name="void" use="void"/>
			<type name="int8_t" use="int8_t"/>
			<type name="uint8_t" use="uint8_t"/>
			<type name="int16_t" use="int16_t"/>
			<type name="uint16_t" use="uint16_t"/>
			<type name="int32_t" use="int32_t"/>
			<type name="uint32_t" use="uint32_t"/>
		</types>
		<settings>
			<set name="flagOnlyFastVDI" value="True"/>
			<set name="flagTreadSafe" value="True"/>
		</settings>
	</target>

</global>
